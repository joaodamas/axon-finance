service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /transactions/{transId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /groups/{groupId} {
      function isGroupMember() {
        return isSignedIn() && request.auth.uid in resource.data.members;
      }

      function inviteEmail() {
        return request.auth.token.email;
      }

      function hasPendingInvite() {
        return isSignedIn()
          && inviteEmail() != null
          && exists(/databases/$(database)/documents/groups/$(groupId)/invites/$(inviteEmail()))
          && get(/databases/$(database)/documents/groups/$(groupId)/invites/$(inviteEmail())).data.status == "pending";
      }

      allow create: if isSignedIn()
        && request.resource.data.members is list
        && request.auth.uid in request.resource.data.members;
      allow read: if isGroupMember();
      allow update: if isGroupMember()
        || (hasPendingInvite()
          && request.resource.data.members.hasAll(resource.data.members)
          && request.resource.data.members.size() == resource.data.members.size() + 1
          && request.auth.uid in request.resource.data.members);
      allow delete: if isGroupMember();

      match /transactions/{transId} {
        allow read, write: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }

      match /invites/{inviteId} {
        allow create: if isSignedIn()
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow read: if isSignedIn()
          && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
            || request.auth.token.email == resource.data.email);
        allow update: if isSignedIn()
          && (request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
            || request.auth.token.email == resource.data.email);
      }
    }
  }
}
